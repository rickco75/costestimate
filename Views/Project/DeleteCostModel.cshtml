@model CostEstimate.Models.CostProjectViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Cost Model?</h3>
<div>
    <hr />
    Job Name: @Model.Projects.JobName
    <hr />
    <dl class="dl-horizontal">
        <dd>
           CostModel ID: @Html.DisplayFor(model => model.CostModel.Id)
        </dd>
    </dl>

    <form asp-action="DeleteCostModelConfirmed">
        <input type="hidden" name="id" asp-for="CostModel.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="ViewCost">Back to List</a>
    </form>
</div>
